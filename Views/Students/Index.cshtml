@{
    Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>No Students have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Student student in Model)
    {
      <li>@Html.ActionLink($"{student.StudentName}", "Details", new { id = student.StudentId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a new student", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>