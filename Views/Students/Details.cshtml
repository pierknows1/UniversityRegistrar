@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student;
@using UniversityRegistrar.Models

<h2>Student Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.StudentName): @Html.DisplayFor(model => model.StudentName)<h3>
<p>@Html.ActionLink("Back to list", "Index")</p>

if @(Model.StudentCourses.Count == 0)
{
  <h3>This student is not enrolled in any courses.</h3>
}
else
{
  <h3>Enrolled in the following courses: </h3>
  <ul>
   @foreach ( StudentCourse join in Model.StudentCourses)
    {

        @join.Course.CourseName

    }
  </ul>

}