@{
    Layout ="_Layout";
}

@using UniversityRegistrar.Models;

<h1>Courses</h1>

@if (Model.Count == 0)
{
    <h4>No courses Have been Added!</h4>
}
    <ul>
        @foreach (Course course in Model)
    {
        <li>@Html.ActionLink($"{course.CourseName}", "Details", new { id = course.CourseId })</li>
    }
    </ul>

<p>@Html.ActionLink("Add a new course", "Create")</p>

<p>@Html.ActionLink("Add a new student", "Students")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
